<!doctype html>
<html lang="en">
<head>
<title>Exploding Kittens</title>

<script type="text/javascript">
 
$( init );

function init() {
  $('.draggable-card').draggable( {
    cursor: 'move',
    snap: '#droppable',
    containment: '#content',
    stack: '.draggable-card'
  });

  $('#droppable').droppable( {
  	accept: '.draggable-card',
    hoverClass: 'hovered',
    drop: handleDropEvent
  });

}

function handleDropEvent( event, ui ) {
  var draggable = ui.draggable;
  alert( 'Card "' + draggable.attr('id') + '" was discarded!' );
}



</script>
 
</head>

<body>
 
<div id="content" style="height: 600px;">

  <div id="deck" class="card">
    <%=image_tag("deck.png")%>
  </div>

  <div id="droppable" class="card">Discard</div>

	<div>
		<div class="card draggable-card" id="Skip 1">
			<%=image_tag("skip-1.png")%>
  		</div>
  		<div class="card draggable-card" id="Future 1">
  			<%=image_tag("future-1.png")%>
  		</div>
      <div class="card draggable-card" id="Future 2">
        <%=image_tag("future-2.jpg")%>
      </div>
  		<div class="card draggable-card" id="Nope 1">
  			<%=image_tag("nope-1.png")%>
  		</div>
      <div class="card draggable-card" id="Nope 2">
        <%=image_tag("nope-2.png")%>
      </div>
      <div class="card draggable-card" id="Defuse 1">
        <%=image_tag("defuse-1.jpg")%>
      </div>
      <div class="card draggable-card" id="Cat 1">
        <%=image_tag("cat-1.jpg")%>
      </div>
      <div class="card draggable-card" id="Cat 2">
        <%=image_tag("cat-2.jpg")%>
      </div>
      <div class="card draggable-card" id="Attack 1">
        <%=image_tag("attack-1.jpg")%>
      </div>
      <div class="card draggable-card" id="Attack 2">
        <%=image_tag("attack-2.jpg")%>
      </div>
      <div class="card draggable-card" id="Exploding Kitten 1">
        <%=image_tag("exploding-kitten-1.jpg")%>
      </div>
      <div class="card draggable-card" id="Exploding Kitten 2">
        <%=image_tag("exploding-kitten-2.jpg")%>
      </div>
      <div class="card draggable-card" id="Exploding Kitten 3">
        <%=image_tag("exploding-kitten-3.jpg")%>
      </div>
	</div>
</div>

<div id="play_again">
	<button onclick="init()">Play again</button>
</div>
 
</body>
</html>