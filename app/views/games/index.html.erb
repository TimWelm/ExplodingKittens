<!DOCTYPE html>
<html lang="en">
<head>
  <title>Exploding Kittens</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>

  <%= render 'nav/navbar' %>

<div class="container-fluid" align="center">
  <h1>Lobby</h1>
  <span>
    <%= link_to(
        'Create Game',
        '',
        class: 'btn btn-info btn-lg btn-create',
        style: 'margin-top: 0;',
        data: { toggle: 'modal', target: '#new_game_form' }
      ) %>
  </span>
  <div>
    <% if @games.size != 0 %>
    <div class="game-box">
      <table class="table games-table">
        <tr style="border-bottom: 5px solid white;">
          <th>ID</th>
          <th>ROOM NAME</th>
          <th>HOST</th>
          <th>PLAYERS</th>
          <th></th>
        </tr>

        <% @games.each do |game| %>
        <tr>
          <td><%= game.id %></td>
          <td><%= game.room_name %></td>
          <td><%= game.host.try(:username) || 'Abandoned' %></td>
          <td><%= "#{game.players.length}/#{Game::MAX_PLAYERS}" %></td>
          <td><button><%= link_to 'Join', game_join_path(game) %></button></td>
        </tr>
        <% end %>
      </table>
    </div>

    <% else %>
      <br /><br />
      <h3>There are no game rooms yet</h3>
    <% end -%>
  </div>

  <!-- Create Game Modal -->
  <div class="modal fade" id="new_game_form" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">New Exploding Kittens Game</h4>
        </div>
        <div class="modal-body">
          <%= form_for :game, :html => {:style => "color: black"}, url: games_path do |f| %>
          <fieldset class="form-group">
            <%= f.label :room_name %>:<br />
            <%= f.text_field :room_name %><br />
          </fieldset>
          <br></br>

          <p>
            <%= f.submit "Create New Game"%>
          </p>
          <% end %>
        </div>
        <div class="modal-footer" >
        </div>
      </div>
    </div>
  </div>
</div>

</body>
</html>
